@model AdminCrearUsuarioViewModel

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class=" bg-light py-4">
    <div class="container-fluid px-4">
        <!-- Encabezado -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 text-primary mb-1">Crear Nuevo Usuario</h1>
                <p class="text-muted mb-0">Complete el formulario para registrar un nuevo usuario en el sistema</p>
            </div>
            <div class="d-flex gap-2">
                <a href="/Admin/Index" class="btn btn-light">
                    <i class="bi bi-arrow-left me-2"></i>Regresar
                </a>
                <button form="registerForm" id="registerSubmit" type="submit" class="btn btn-primary">
                    <i class="bi bi-person-plus me-2"></i>Crear Usuario
                </button>
            </div>
        </div>

        <!-- Formulario Principal -->
        <form id="registerForm" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

            <div class="row g-4">
                <!-- Columna Izquierda -->
                <div class="col-lg-8">
                    <!-- Datos Personales -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h2 class="h6 mb-0 text-primary">
                                <i class="bi bi-person me-2"></i>Datos Personales
                            </h2>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="Nombre" class="form-control bg-light border-0" aria-required="true" placeholder=" " />
                                        <label asp-for="Nombre" class="text-muted">Nombre</label>
                                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="PrimerApellido" class="form-control bg-light border-0" aria-required="true" placeholder=" " />
                                        <label asp-for="PrimerApellido" class="text-muted">Primer Apellido</label>
                                        <span asp-validation-for="PrimerApellido" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="SegundoApellido" class="form-control bg-light border-0" aria-required="true" placeholder=" " />
                                        <label asp-for="SegundoApellido" class="text-muted">Segundo Apellido</label>
                                        <span asp-validation-for="SegundoApellido" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Contacto -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h2 class="h6 mb-0 text-primary">
                                <i class="bi bi-envelope me-2"></i>Información de Contacto
                            </h2>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Email" class="form-control bg-light border-0" autocomplete="username" aria-required="true" placeholder=" " />
                                        <label asp-for="Email" class="text-muted">Email</label>
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="NumeroTelefono" class="form-control bg-light border-0" aria-required="true" placeholder=" " />
                                        <label asp-for="NumeroTelefono" class="text-muted">Número de Teléfono</label>
                                        <span asp-validation-for="NumeroTelefono" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información Laboral -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h2 class="h6 mb-0 text-primary">
                                <i class="bi bi-briefcase me-2"></i>Información Laboral
                            </h2>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Salario" class="form-control bg-light border-0" aria-required="true" placeholder=" " />
                                        <label asp-for="Salario" class="text-muted">Salario</label>
                                        <span asp-validation-for="Salario" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="FechaNacimiento" id="datepicker" class="form-control bg-light border-0" aria-required="true" placeholder=" " />
                                        <label asp-for="FechaNacimiento" class="text-muted">Fecha de Nacimiento</label>
                                        <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Columna Derecha -->
                <div class="col-lg-4">
                    <!-- Credenciales -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h2 class="h6 mb-0 text-primary">
                                <i class="bi bi-key me-2"></i>Credenciales de Acceso
                            </h2>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="form-floating">
                                    <input asp-for="Password" class="form-control bg-light border-0" autocomplete="new-password" placeholder=" " />
                                    <label asp-for="Password" class="text-muted">Contraseña</label>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-floating">
                                    <input asp-for="ConfirmPassword" class="form-control bg-light border-0" autocomplete="new-password" placeholder=" " />
                                    <label asp-for="ConfirmPassword" class="text-muted">Confirmar Contraseña</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Asignación -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white py-3">
                            <h2 class="h6 mb-0 text-primary">
                                <i class="bi bi-diagram-3 me-2"></i>Asignación
                            </h2>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label asp-for="IdRol" class="form-label text-muted">Rol</label>
                                <select asp-for="IdRol" asp-items="@ViewBag.Roles" class="form-select bg-light border-0"></select>
                                <span asp-validation-for="IdRol" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="idSucursal" class="form-label text-muted">Sucursal</label>
                                <select asp-for="idSucursal" asp-items="@ViewBag.Sucursal" class="form-select bg-light border-0"></select>
                                <span asp-validation-for="idSucursal" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}