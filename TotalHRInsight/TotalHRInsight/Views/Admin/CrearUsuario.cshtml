@model AdminCrearUsuarioViewModel

@{
	ViewData["Title"] = "Crear Usuario";
}

<div class="container">
	<div class="user-create-box">
		<h1>Crea una nueva cuenta.</h1>
		<hr />
		<form id="registerForm" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-floating mb-3">
						<input asp-for="Nombre" class="form-control" aria-required="true" placeholder=" " />
						<label asp-for="Nombre">Nombre</label>
						<span asp-validation-for="Nombre" class="text-danger"></span>
					</div>
					<div class="form-floating mb-3">
						<input asp-for="PrimerApellido" class="form-control" aria-required="true" placeholder=" " />
						<label asp-for="PrimerApellido">Primer Apellido</label>
						<span asp-validation-for="PrimerApellido" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-floating mb-3">
						<input asp-for="SegundoApellido" class="form-control" aria-required="true" placeholder=" " />
						<label asp-for="SegundoApellido">Segundo Apellido</label>
						<span asp-validation-for="SegundoApellido" class="text-danger"></span>
					</div>
					<div class="form-floating mb-3">
						<input asp-for="FechaNacimiento" id="datepicker" class="form-control" aria-required="true" />
						<label asp-for="FechaNacimiento">Fecha de Nacimiento</label>
						<span asp-validation-for="FechaNacimiento" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-floating mb-3">
						<input asp-for="NumeroTelefono" class="form-control" aria-required="true" placeholder=" " />
						<label asp-for="NumeroTelefono">NumeroTelefono</label>
						<span asp-validation-for="NumeroTelefono" class="text-danger"></span>
					</div>
					<div class="form-floating mb-3">
						<input asp-for="Salario" id="datepicker" class="form-control" aria-required="true" />
						<label asp-for="Salario">Salario</label>
						<span asp-validation-for="Salario" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-floating mb-3">
						<input asp-for="Password" class="form-control" autocomplete="new-password" />
						<label asp-for="Password">Contraseña</label>
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="form-floating mb-3">
						<input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
						<label asp-for="ConfirmPassword">Confirmar Contraseña</label>
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="form-floating mb-3">
				<input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" " />
				<label asp-for="Email">Email</label>
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<select asp-for="IdRol" asp-items="@ViewBag.Roles" class="form-control"></select>
				<label asp-for="IdRol">Role</label>
				<span asp-validation-for="IdRol" class="text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<select asp-for="idSucursal" asp-items="@ViewBag.Sucursal" class="form-control"></select>
				<label asp-for="idSucursal">Sucursal</label>
				<span asp-validation-for="idSucursal" class="text-danger"></span>
			</div>
			<button id="registerSubmit" type="submit" class="btn btn-lg btn-danger">Registrar</button>
			<a href="/Admin/Index" class="btn btn-secondary">Regresar</a>
		</form>
	</div>
</div>


