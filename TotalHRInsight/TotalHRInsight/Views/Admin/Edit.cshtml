@model EditUserViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-3">
                <i class="bi bi-person-circle" style="font-size: 5rem; color: #6c757d;"></i>
            </div>
            <div class="card shadow-lg">
                <div class="card-header text-center text-white bg-secondary">
                    <h1 class="my-2">Editar Usuario</h1>
                </div>
                <div class="card-body">
                    <hr class="my-4"> <!-- Added margin top and bottom -->
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Nombre" class="form-control" aria-required="true" placeholder=" " />
                                    <label asp-for="Nombre">Nombre</label>
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="PrimerApellido" class="form-control" aria-required="true" placeholder=" " />
                                    <label asp-for="PrimerApellido">Primer Apellido</label>
                                    <span asp-validation-for="PrimerApellido" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="SegundoApellido" class="form-control" aria-required="true" placeholder=" " />
                                    <label asp-for="SegundoApellido">Segundo Apellido</label>
                                    <span asp-validation-for="SegundoApellido" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="FechaNacimiento" id="datepicker" class="form-control" aria-required="true" placeholder=" " />
                                    <label asp-for="FechaNacimiento">Fecha de Nacimiento</label>
                                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="NumeroTelefono" class="form-control" aria-required="true" placeholder=" " />
                                    <label asp-for="NumeroTelefono">Número de Teléfono</label>
                                    <span asp-validation-for="NumeroTelefono" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Salario" class="form-control" aria-required="true" placeholder=" " />
                                    <label asp-for="Salario">Salario</label>
                                    <span asp-validation-for="Salario" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Password" class="form-control" autocomplete="new-password" placeholder=" " />
                                    <label asp-for="Password">Contraseña</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" placeholder=" " />
                                    <label asp-for="ConfirmPassword">Confirmar Contraseña</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" " />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <!-- Increased margin bottom -->
                            <label asp-for="SelectedRoleId" class="form-label">Rol</label>
                            <select asp-for="SelectedRoleId" asp-items="@ViewBag.Roles" class="form-select"></select>
                            <span asp-validation-for="SelectedRoleId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="idSucursal" class="form-label">Sucursal</label>
                            <select asp-for="idSucursal" asp-items="@ViewBag.Sucursal" class="form-select"></select>
                            <span asp-validation-for="idSucursal" class="text-danger"></span>
                        </div>
                        <hr class="my-4"> <!-- Added margin top and bottom -->
                        <div class="d-flex justify-content-between mt-4">
                            <a href="/Admin/Index" class="btn btn-secondary me-2" style="flex: 1;">
                                <i class="bi bi-arrow-left-circle"></i> Regresar
                            </a>
                            <button type="submit" class="btn btn-danger ms-2" style="flex: 1;">
                                <i class="bi bi-check-circle"></i> Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
