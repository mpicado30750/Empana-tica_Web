@model TotalHRInsight.DAL.ApplicationUser // Asegúrate de que estás pasando el modelo correcto, que sería tu entidad Usuario

@{
    ViewData["Title"] = "Activar Usuario";
}
<div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border-0 shadow">
                    <div class="card-body text-center p-5">
                        <div class="mb-4">
                            <i class="bi bi-person-check-fill text-secondary" style="font-size: 3rem;"></i>
                        </div>

                    <h2 class="card-title mb-3 text-secondary fw-bold">Activar Usuario</h2>
                        
                        <p class="card-text mb-4 text-muted fs-5">
                            ¿Estás seguro de que deseas activar a <strong class="text-dark">@Model.Nombre</strong>?
                        </p>

                        <form asp-action="Activar" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                                <button type="submit" class="btn btn-success btn-lg px-4 gap-3" data-bs-toggle="tooltip" data-bs-placement="top" title="Confirmar activación">
                                    <i class="bi bi-person-check-fill me-2"></i>
                                    Activar
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4" data-bs-toggle="tooltip" data-bs-placement="top" title="Volver al listado">
                                    <i class="bi bi-arrow-left me-2"></i>
                                    Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}