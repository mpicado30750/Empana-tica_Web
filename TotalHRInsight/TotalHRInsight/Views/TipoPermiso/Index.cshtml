@model IEnumerable<TotalHRInsight.DAL.TipoPermiso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombrePermiso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePermiso)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-IdTipoPermiso="@item.IdTipoPermiso">Edit</a> |
                    <a asp-action="Details" asp-route-IdTipoPermiso="@item.IdTipoPermiso">Details</a> |
                    <a asp-action="Delete" asp-route-IdTipoPermiso="@item.IdTipoPermiso">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
