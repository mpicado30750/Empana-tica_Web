@model IEnumerable<TotalHRInsight.DAL.Sucursal>

@{
    ViewData["Title"] = "Lista de Sucursales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex justify-content-between align-items-center my-4">
    <h1 class="mb-0">Lista de Sucursales</h1>
    <div>
        <a asp-action="Create" class="btn btn-danger me-2" onclick="showLoader()">
            <i class="bi bi-plus-circle"></i> Crear Nuevo Registro
        </a>
    </div>
</div>
<hr />
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">@Html.DisplayFor(modelItem => item.NombreSucursal)</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="text-muted">@Html.DisplayNameFor(m => m.UbicacionSucursal):</h6>
                        <p class="mb-0">@Html.DisplayFor(modelItem => item.UbicacionSucursal)</p>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-IdSucursal="@item.IdSucursal" class="btn btn-warning" onclick="showLoader()">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-IdSucursal="@item.IdSucursal" class="btn btn-info" onclick="showLoader()">
                            <i class="bi bi-info-circle"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-IdSucursal="@item.IdSucursal" class="btn btn-danger" onclick="showLoader()">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Incluir la vista parcial del loader modal -->
@Html.Partial("_LoaderModal")

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}
