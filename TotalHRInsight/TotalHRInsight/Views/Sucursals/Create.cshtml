@model TotalHRInsight.Models.Sucursal.CrearSucursal

@{
    ViewData["Title"] = "Crear Sucursal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4 bg-light">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="d-flex align-items-center mb-4">
                <h1 class="h3 mb-0 text-primary fw-bold">Añadir Sucursal</h1>
            </div>
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div class="row">
                            <!-- Columna del formulario -->
                            <div class="col-md-6">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                                <div class="mb-4">
                                    <label asp-for="NombreSucursal" class="form-label text-dark fw-semibold">
                                        <i class="bi bi-building me-2"></i>Nombre de la Sucursal
                                    </label>
                                    <input asp-for="NombreSucursal" class="form-control form-control-lg border-0 bg-light"
                                           placeholder="Ingrese el nombre de la sucursal" />
                                    <span asp-validation-for="NombreSucursal" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="UbicacionSucursal" class="form-label text-dark fw-semibold">
                                        <i class="bi bi-geo-alt me-2"></i>Dirección
                                    </label>
                                    <input asp-for="UbicacionSucursal" class="form-control form-control-lg border-0 bg-light"
                                           placeholder="Ingrese la dirección exacta" />
                                    <span asp-validation-for="UbicacionSucursal" class="text-danger small"></span>
                                </div>

                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <label asp-for="Latitud" class="form-label text-dark fw-semibold">
                                            <i class="bi bi-geo me-2"></i>Latitud
                                        </label>
                                        <input asp-for="Latitud" id="lat" class="form-control form-control-lg border-0 bg-light"
                                               placeholder="Latitud" required readonly />
                                        <span asp-validation-for="Latitud" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Longitud" class="form-label text-dark fw-semibold">
                                            <i class="bi bi-geo me-2"></i>Longitud
                                        </label>
                                        <input asp-for="Longitud" id="lng" class="form-control form-control-lg border-0 bg-light"
                                               placeholder="Longitud" required readonly />
                                        <span asp-validation-for="Longitud" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="d-flex gap-3 mt-4">
                                    <a asp-action="Index" class="btn btn-light btn-lg px-4 fw-semibold" onclick="showLoader()">
                                        <i class="bi bi-arrow-left me-2"></i>Regresar
                                    </a>
                                    <button type="submit" class="btn btn-primary btn-lg px-4 fw-semibold" onclick="showLoader()">
                                        <i class="bi bi-plus-circle me-2"></i>Añadir Sucursal
                                    </button>
                                </div>
                            </div>

                            <!-- Columna del mapa -->
                            <div class="col-md-6">
                                <div class="card h-90 border-0 shadow-sm">
                                    <div class="card-body p-0">
                                        <div id="map" style="width: 100%; height: 450px; border-radius: 8px;"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

<script src="~/lib/leaflet/leaflet.js"></script>
<script>
    var map = L.map('map').setView([9.895403, -84.063574], 15);
    var lastMarker = null;
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    map.on('click', function (e) {
        if (lastMarker) {
            map.removeLayer(lastMarker);
        }
        lastMarker = L.marker([e.latlng.lat, e.latlng.lng]).addTo(map);
        document.getElementById('lat').value = e.latlng.lat.toFixed(6);
        document.getElementById('lng').value = e.latlng.lng.toFixed(6);
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}