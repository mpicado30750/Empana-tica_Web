@model TotalHRInsight.DAL.CierreCaja
@{
    ViewData["Title"] = "Crear CierreCaja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow">
                <div class="card-header bg-secondary bg-gradient text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>Nuevo Cierre de Caja
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Fecha" class="form-control form-control-lg" placeholder="Fecha" />
                                    <label asp-for="Fecha">
                                        <i class="bi bi-calendar3 me-1"></i>Fecha
                                    </label>
                                    <span asp-validation-for="Fecha" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="SucursalId" class="form-select form-select-lg" asp-items="ViewBag.SucursalId">
                                    </select>
                                    <label asp-for="SucursalId">
                                        <i class="bi bi-building me-1"></i>Sucursal
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light">₡</span>
                                        <input asp-for="MontoTotal" class="form-control form-control-lg" placeholder="Monto Total" />
                                    </div>
                                    <span asp-validation-for="MontoTotal" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="UsuarioCreacionId" class="form-select form-select-lg" asp-items="ViewBag.UsuarioCreacionId">
                                    </select>
                                    <label asp-for="UsuarioCreacionId">
                                        <i class="bi bi-person me-1"></i>Usuario
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-light btn-lg px-4" onclick="showLoader()">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-4" onclick="showLoader()">
                                <i class="bi bi-check2-circle me-2"></i>Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}