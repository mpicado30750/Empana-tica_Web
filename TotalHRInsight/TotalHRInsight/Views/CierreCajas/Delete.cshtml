@model TotalHRInsight.DAL.CierreCaja

@{
    ViewData["Title"] = "Eliminar Cierre de Caja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Eliminar Cierre de Caja</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-danger text-center">¿Estás seguro de que quieres eliminar este registro?</h3>
                    <hr />
                    <h4 class="text-center text-danger">Detalles del Cierre</h4>
                    <dl class="row mt-4">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Fecha)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Fecha)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.MontoTotal)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.MontoTotal)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Sucursal)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Sucursal.NombreSucursal)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.UsuarioCreacion)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UsuarioCreacion.Id)
                        </dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="IdCierraCaja" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary" style="flex: 1;" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle"></i> Regresar
                            </a>
                            <button type="submit" class="btn btn-danger ms-2" style="flex: 1;" onclick="showLoader()">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}
