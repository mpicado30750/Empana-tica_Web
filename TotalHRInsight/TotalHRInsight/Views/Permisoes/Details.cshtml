@model TotalHRInsight.DAL.Permiso

@{
    ViewData["Title"] = "Detalles Permiso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">Detalles de Permiso</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.FechaInicio)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FechaInicio)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.FechaFin)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FechaFin)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.CantidadDias)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CantidadDias)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Comentario)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Comentario)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.MotivoAdmin)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.MotivoAdmin)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.TipoPermisos)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.TipoPermisos.NombrePermiso)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.UsuarioCreacion)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UsuarioCreacion.Nombre)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.UsuarioAsignacion)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UsuarioAsignacion.Nombre)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Estado.EstadoSolicitud)
                        </dd>
                    </dl>
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Edit" asp-route-IdPermisos="@Model.IdPermisos" class="btn btn-warning ms-2" style="flex: 1;" onclick="showLoader()">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary ms-2" style="flex: 1;" onclick="showLoader()">
                            <i class="bi bi-arrow-left-circle"></i> Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_LoaderModal")

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}