@model TotalHRInsight.DAL.Permiso

@{
    ViewData["Title"] = "Detalles Permiso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-info text-white py-3">
                    <h4 class="mb-0 text-center">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        Detalles del Permiso #@Model.IdPermisos
                    </h4>
                </div>
                <div class="card-body bg-light">
                    <div class="row">
                        <!-- Columna Izquierda -->
                        <div class="col-md-6 pe-md-4">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item border-0 px-0">
                                    <small class="text-muted d-block mb-1">Período del Permiso</small>
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-calendar-range text-info me-2"></i>
                                        <p class="mb-0">@Model.FechaInicio.ToString("dd/MM/yyyy") - @Model.FechaFin.ToString("dd/MM/yyyy")</p>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-calendar-check text-info me-2"></i>
                                        <p class="mb-0">@Model.CantidadDias días</p>
                                    </div>
                                </div>

                                <div class="list-group-item border-0 px-0">
                                    <small class="text-muted d-block mb-1">Comentario</small>
                                    <div class="d-flex">
                                        <i class="bi bi-chat-text text-info me-2"></i>
                                        <p class="mb-0">@Model.Comentario</p>
                                    </div>
                                </div>

                                <div class="list-group-item border-0 px-0">
                                    <small class="text-muted d-block mb-1">Tipo de Permiso</small>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-tag text-info me-2"></i>
                                        <span>@Model.TipoPermisos.NombrePermiso</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Columna Derecha -->
                        <div class="col-md-6 ps-md-4">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item border-0 px-0">
                                    <small class="text-muted d-block mb-1">Motivo Administrativo</small>
                                    <div class="d-flex">
                                        <i class="bi bi-clipboard-data text-info me-2"></i>
                                        <p class="mb-0">@Model.MotivoAdmin</p>
                                    </div>
                                </div>

                                <div class="list-group-item border-0 px-0">
                                    <small class="text-muted d-block mb-1">Usuarios</small>
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-person text-info me-2"></i>
                                        <p class="mb-0"><strong>Creado por:</strong> @Model.UsuarioCreacion.Nombre</p>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-check text-info me-2"></i>
                                        <p class="mb-0"><strong>Asignado a:</strong> @Model.UsuarioAsignacion.Nombre</p>
                                    </div>
                                </div>

                                <div class="list-group-item border-0 px-0">
                                    <small class="text-muted d-block mb-1">Estado</small>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-flag text-info me-2"></i>
                                        <span class="badge bg-info">@Model.Estado.EstadoSolicitud</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-3 d-md-flex justify-content-md-between mt-4">
                        <a asp-action="Edit" asp-route-IdPermisos="@Model.IdPermisos" class="btn btn-warning px-4 py-2 flex-grow-1" onclick="showLoader()">
                            <i class="bi bi-pencil-square me-2"></i>Editar
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 flex-grow-1" onclick="showLoader()">
                            <i class="bi bi-arrow-left-circle me-2"></i>Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}