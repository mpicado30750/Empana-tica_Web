@model IEnumerable<TotalHRInsight.DAL.Permiso>

@{
	ViewData["Title"] = "Indice Permiso";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
	Permisos
	<a asp-action="Create" class="btn btn-crear">
		<i class="bi bi-plus-circle"></i> Crear nuevo registro
	</a>
</h1>
<div class="container mt-4">
	<div class="row">
		@foreach (var item in Model)
		{
			<div class="col-md-4 mb-4">
				<div class="card shadow-sm">
					<div class="card-header bg-danger text-white">
						<h5 class="card-title">@Html.DisplayFor(modelItem => item.UsuarioAsignacion.Nombre) @Html.DisplayFor(modelItem => item.UsuarioAsignacion.PrimerApellido) @Html.DisplayFor(modelItem => item.UsuarioAsignacion.SegundoApellido)</h5>
					</div>
					<div class="card-body">
						<p><strong>@Html.DisplayNameFor(model => model.FechaInicio):</strong> @Html.DisplayFor(modelItem => item.FechaInicio)</p>
						<p><strong>@Html.DisplayNameFor(model => model.FechaFin):</strong> @Html.DisplayFor(modelItem => item.FechaFin)</p>
						<p><strong>@Html.DisplayNameFor(model => model.CantidadDias):</strong> @Html.DisplayFor(modelItem => item.CantidadDias)</p>
						<p><strong>@Html.DisplayNameFor(model => model.Estado):</strong> @Html.DisplayFor(modelItem => item.Estado)</p>
						<p><strong>@Html.DisplayNameFor(model => model.Comentario):</strong> @Html.DisplayFor(modelItem => item.Comentario)</p>
						<p><strong>@Html.DisplayNameFor(model => model.Incidencia):</strong> @Html.DisplayFor(modelItem => item.Incidencia.NombreIncidencia)</p>
						<p><strong>@Html.DisplayNameFor(model => model.UsuarioCreacion):</strong> @Html.DisplayFor(modelItem => item.UsuarioCreacion.Nombre)</p>
					</div>
					<div class="card-footer text-center">
						<a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-IdPermisos="@item.IdPermisos">
							<i class="bi bi-pencil"></i> Edit
						</a>
						<a class="btn btn-sm btn-info" asp-action="Details" asp-route-IdPermisos="@item.IdPermisos">
							<i class="bi bi-info-circle"></i> Details
						</a>
						<a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-IdPermisos="@item.IdPermisos">
							<i class="bi bi-trash"></i> Delete
						</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>
@section Scripts {
	<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}