@model IEnumerable<TotalHRInsight.DAL.Permiso>

@{
    ViewData["Title"] = "Indice Permisos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Permisos</h1>

<p>
    <a asp-action="Create">Crear nuevo registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadDias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Incidencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioAsignacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadDias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Incidencia.NombreIncidencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioCreacion.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioAsignacion.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPermisos">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdPermisos">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPermisos">Eliminar</a> |
                <a asp-action="" asp-route-id="@item.IdPermisos">Descargar</a>
            </td>
        </tr>
}
    </tbody>
</table>
