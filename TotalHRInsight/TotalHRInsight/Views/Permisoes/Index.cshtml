@model IEnumerable<TotalHRInsight.DAL.Permiso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadDias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotivoAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoPermiso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioAsignacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadDias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotivoAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoPermiso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioCreacion.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioAsignacion.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.EstadoSolicitud)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPermisos">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPermisos">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPermisos">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
