@model TotalHRInsight.DAL.Permiso

@{
    ViewData["Title"] = "Eliminar Permiso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0 text-center">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Eliminar Permiso
                    </h4>
                </div>
                <div class="card-body bg-light">
                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-exclamation-circle-fill me-2"></i>
                        ¿Está seguro que desea eliminar este permiso? Esta acción no se puede deshacer.
                    </div>

                    <div class="list-group list-group-flush mb-4">
                        <div class="list-group-item bg-transparent">
                            <small class="text-muted d-block mb-1">Período del Permiso</small>
                            <p class="mb-0">
                                <i class="bi bi-calendar-event me-2"></i>
                                Del @Model.FechaInicio.ToString("dd/MM/yyyy") al @Model.FechaFin.ToString("dd/MM/yyyy")
                                <span class="badge bg-secondary ms-2">@Model.CantidadDias días</span>
                            </p>
                        </div>

                        <div class="list-group-item bg-transparent">
                            <small class="text-muted d-block mb-1">Detalles</small>
                            <p class="mb-1">
                                <i class="bi bi-chat-quote me-2"></i>
                                @Model.Comentario
                            </p>
                            <p class="mb-0">
                                <i class="bi bi-clipboard-check me-2"></i>
                                @Model.MotivoAdmin
                            </p>
                        </div>

                        <div class="list-group-item bg-transparent">
                            <small class="text-muted d-block mb-1">Información de Usuarios</small>
                            <p class="mb-1">
                                <i class="bi bi-person-plus me-2"></i>
                                Creado por: @Model.UsuarioCreacion.Nombre
                            </p>
                            <p class="mb-0">
                                <i class="bi bi-person-check me-2"></i>
                                Asignado a: @Model.UsuarioAsignacion.Nombre
                            </p>
                        </div>

                        <div class="list-group-item bg-transparent">
                            <small class="text-muted d-block mb-1">Estado</small>
                            <p class="mb-0">
                                <i class="bi bi-tag me-2"></i>
                                @Model.Estado.EstadoSolicitud
                            </p>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="IdPermisos" value="@Model.IdPermisos" />
                        <div class="d-grid gap-3 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger px-4 py-2 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-trash3-fill me-2"></i>Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}