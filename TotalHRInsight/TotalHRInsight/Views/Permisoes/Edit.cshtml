@model TotalHRInsight.DAL.Permiso

@{
    ViewData["Title"] = "Editar Permiso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-secondary text-white py-3">
                    <h4 class="mb-0 text-center">
                        <i class="bi bi-pencil-square me-2"></i>
                        Editar Permiso
                    </h4>
                </div>
                <div class="card-body bg-light">
                    <form asp-action="Edit" class="needs-validation">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="IdPermisos" />
                        
                        <div class="row">
                            <!-- Columna Izquierda -->
                            <div class="col-md-6 pe-md-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="FechaInicio" class="form-control" type="date" />
                                    <label asp-for="FechaInicio"></label>
                                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="CantidadDias" class="form-control" type="number" />
                                    <label asp-for="CantidadDias"></label>
                                    <span asp-validation-for="CantidadDias" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <textarea asp-for="Comentario" class="form-control" style="height: 100px"></textarea>
                                    <label asp-for="Comentario"></label>
                                    <span asp-validation-for="Comentario" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <select asp-for="UsuarioCreacionId" class="form-select" asp-items="ViewBag.UsuarioCreacionId">
                                    </select>
                                    <label asp-for="UsuarioCreacionId"></label>
                                </div>

                                <div class="form-floating mb-3">
                                    <select asp-for="IdTipoPermiso" class="form-select" asp-items="ViewBag.IdTipoPermiso">
                                    </select>
                                    <label asp-for="TipoPermisos.NombrePermiso"></label>
                                </div>
                            </div>

                            <!-- Columna Derecha -->
                            <div class="col-md-6 ps-md-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="FechaFin" class="form-control" type="date" />
                                    <label asp-for="FechaFin"></label>
                                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <textarea asp-for="MotivoAdmin" class="form-control" style="height: 100px"></textarea>
                                    <label asp-for="MotivoAdmin"></label>
                                    <span asp-validation-for="MotivoAdmin" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <select asp-for="UsuarioAsignacionId" class="form-select" asp-items="ViewBag.UsuarioAsignacionId">
                                    </select>
                                    <label asp-for="UsuarioAsignacionId"></label>
                                </div>

                                <div class="form-floating mb-3">
                                    <select asp-for="IdEstado" class="form-select" asp-items="ViewBag.IdEstado">
                                    </select>
                                    <label asp-for="Estado.EstadoSolicitud"></label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-3 d-md-flex justify-content-md-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle me-2"></i>Regresar
                            </a>
                            <button type="submit" class="btn btn-warning px-4 py-2 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-save me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>

}