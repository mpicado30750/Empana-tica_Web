@model TotalHRInsight.DAL.Permiso

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Editar Permiso</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="IdPermisos" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdPermisos" />
                        <div class="form-group">
                            <label asp-for="FechaInicio" class="control-label"></label>
                            <input asp-for="FechaInicio" class="form-control" />
                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FechaFin" class="control-label"></label>
                            <input asp-for="FechaFin" class="form-control" />
                            <span asp-validation-for="FechaFin" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CantidadDias" class="control-label"></label>
                            <input asp-for="CantidadDias" class="form-control" />
                            <span asp-validation-for="CantidadDias" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Comentario" class="control-label"></label>
                            <input asp-for="Comentario" class="form-control" />
                            <span asp-validation-for="Comentario" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MotivoAdmin" class="control-label"></label>
                            <input asp-for="MotivoAdmin" class="form-control" />
                            <span asp-validation-for="MotivoAdmin" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsuarioCreacionId" class="control-label"></label>
                            <select asp-for="UsuarioCreacionId" class="form-control" asp-items="ViewBag.UsuarioCreacionId"></select>
                            <span asp-validation-for="UsuarioCreacionId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsuarioAsignacionId" class="control-label"></label>
                            <select asp-for="UsuarioAsignacionId" class="form-control" asp-items="ViewBag.UsuarioAsignacionId"></select>
                            <span asp-validation-for="UsuarioAsignacionId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TipoPermisos.NombrePermiso" class="control-label"></label>
                            <select asp-for="IdTipoPermiso" class="form-control" asp-items="ViewBag.IdTipoPermiso"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Estado.EstadoSolicitud" class="control-label"></label>
                            <select asp-for="IdEstado" class="form-control" asp-items="ViewBag.IdEstado"></select>
                            <span asp-validation-for="IdEstado" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-danger btn-block">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                    <div class="text-center">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
