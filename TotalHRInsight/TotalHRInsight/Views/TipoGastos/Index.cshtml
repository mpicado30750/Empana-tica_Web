@model IEnumerable<TotalHRInsight.DAL.TipoGasto>
@{
    ViewData["Title"] = "Lista de Tipos de Gasto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <h1 class=" text-secondary mb-3 mb-md-0">Lista de Tipos de Gasto</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg px-4" onclick="showLoader()">
            <i class="bi bi-plus-circle me-2"></i>Crear Nuevo Gasto
        </a>
    </div>

    <hr class="border-primary mb-4" />

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4"
         style="max-height: 75vh; overflow-y: auto; scrollbar-width: thin;">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm hover-shadow transition">
                    <div class="card-header bg-secondary text-white py-3">
                        <h5 class="card-title mb-0">@item.NombreGasto</h5>
                    </div>
                    <div class="card-footer bg-light p-3 border-0">
                        <div class="d-flex gap-2 justify-content-between">
                            <a asp-action="Edit" asp-route-IdTipoGasto="@item.IdTipoGasto"
                               class="btn btn-outline-warning flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-pencil-square me-1"></i>Editar
                            </a>
                            <a asp-action="Details" asp-route-IdTipoGasto="@item.IdTipoGasto"
                               class="btn btn-outline-info flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-info-circle me-1"></i>Detalles
                            </a>
                            <a asp-action="Delete" asp-route-IdTipoGasto="@item.IdTipoGasto"
                               class="btn btn-outline-danger flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-trash me-1"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@Html.Partial("_LoaderModal")
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}