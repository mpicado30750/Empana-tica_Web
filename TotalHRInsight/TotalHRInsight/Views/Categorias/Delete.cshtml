@model TotalHRInsight.DAL.Categoria
@{
    ViewData["Title"] = "Eliminar Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <h1 class="text-center display-4 mb-4 text-danger">Eliminar Categoría</h1>
    <hr class="mb-4" />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0 text-center">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        ¿Está seguro de eliminar esta categoría?
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        Esta acción no se puede deshacer.
                    </div>

                    <dl class="row bg-light p-4 rounded-3 mb-4">
                        <dt class="col-sm-3 text-muted">
                            @Html.DisplayNameFor(model => model.NombreCategoria)
                        </dt>
                        <dd class="col-sm-9 fw-bold mb-3">
                            @Html.DisplayFor(model => model.NombreCategoria)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="IdCategoria" value="@Model.IdCategoria" />
                        <div class="d-grid gap-3 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle me-2"></i>Regresar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-4 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-trash3-fill me-2"></i>Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}