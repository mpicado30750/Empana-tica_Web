@model TotalHRInsight.DAL.Categoria
@{
    ViewData["Title"] = "Detalles de Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <h1 class="text-center display-4 mb-4 text-info">Detalles de Categoría</h1>
    <hr class="mb-4" />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="card-title mb-0">Información Detallada</h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row bg-light p-4 rounded-3 mb-4">
                        <dt class="col-sm-3 text-muted">
                            @Html.DisplayNameFor(model => model.NombreCategoria)
                        </dt>
                        <dd class="col-sm-9 fw-bold mb-3">
                            @Html.DisplayFor(model => model.NombreCategoria)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>
                    </dl>

                    <div class="d-grid gap-3 d-md-flex justify-content-md-between">
                        <a asp-action="Edit" asp-route-IdCategoria="@Model.IdCategoria"
                           class="btn btn-warning btn-lg px-4 flex-grow-1" onclick="showLoader()">
                            <i class="bi bi-pencil-square me-2"></i>Editar
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 flex-grow-1" onclick="showLoader()">
                            <i class="bi bi-arrow-left-circle me-2"></i>Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}