@model IEnumerable<TotalHRInsight.DAL.Estado>

@{
    ViewData["Title"] = "Lista de Estados de Solicitud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Estados de Solicitud</h1>
<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.EstadoSolicitud)</h5>
                    <div class="text-end">
                        <a asp-action="Edit" asp-route-IdEstado="@item.IdEstado" class="btn btn-warning">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-IdEstado="@item.IdEstado" class="btn btn-info">
                            <i class="bi bi-info-circle"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-IdEstado="@item.IdEstado" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div>
    <a asp-action="Create" class="btn btn-danger">
        <i class="bi bi-plus-circle"></i> Crear nuevo registro
    </a>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}

