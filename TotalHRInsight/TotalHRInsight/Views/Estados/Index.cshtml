@model IEnumerable<TotalHRInsight.DAL.Estado>
@{
    ViewData["Title"] = "Lista de Estados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-secondary mb-0">Lista de Estados</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg" onclick="showLoader()">
            <i class="bi bi-plus-circle me-2"></i>Crear Nuevo
        </a>
    </div>
    <hr class="mb-4" />
    <div class="row row-cols-1 row-cols-md-3 g-4" style="max-height: 70vh; overflow-y: auto;">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm hover-shadow transition">
                    <div class="card-header bg-secondary text-white py-3">
                        <h5 class="card-title mb-0 text-truncate">@item.EstadoSolicitud</h5>
                    </div>
                    <div class="card-footer bg-light p-3">
                        <div class="d-flex justify-content-between gap-2">
                            <a asp-action="Edit" asp-route-IdEstado="@item.IdEstado"
                               class="btn btn-outline-warning btn-sm flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-pencil-square me-1"></i>Editar
                            </a>
                            <a asp-action="Details" asp-route-IdEstado="@item.IdEstado"
                               class="btn btn-outline-info btn-sm flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-info-circle me-1"></i>Detalles
                            </a>
                            <a asp-action="Delete" asp-route-IdEstado="@item.IdEstado"
                               class="btn btn-outline-danger btn-sm flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-trash me-1"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@Html.Partial("_LoaderModal")
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}