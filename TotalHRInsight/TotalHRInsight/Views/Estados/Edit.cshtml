@model TotalHRInsight.DAL.Estado

@{
    ViewData["Title"] = "Editar Estado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Editar Estado</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="IdEstado" />
                        <div class="form-group mb-3">
                            <label asp-for="EstadoSolicitud" class="form-label"></label>
                            <input asp-for="EstadoSolicitud" class="form-control" />
                            <span asp-validation-for="EstadoSolicitud" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-danger btn-block">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                    <div class="text-center">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
