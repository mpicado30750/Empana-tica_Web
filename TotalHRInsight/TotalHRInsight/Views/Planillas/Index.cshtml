@model IEnumerable<TotalHRInsight.DAL.Planilla>

@{
    ViewData["Title"] = "Planillas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Planilla</h1>

<p>
    <a asp-action="Create">Nuevo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioCrecionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAsistencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPermiso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioCrecionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAsistencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPermiso)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPlanilla" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdPlanilla" class="btn btn-success">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPlanilla" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
