@model TotalHRInsight.Models.Planilla.CrearPlanilla

@{
    ViewData["Title"] = "Crear Planilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">ñadir Registro</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label asp-for="FechaInicio" class="control-label"></label>
                            <input asp-for="FechaInicio" class="form-control" />
                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="FechaFin" class="control-label"></label>
                            <input asp-for="FechaFin" class="form-control" />
                            <span asp-validation-for="FechaFin" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Comentarios" class="control-label"></label>
                            <input asp-for="Comentarios" class="form-control" />
                            <span asp-validation-for="Comentarios" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CurrentUserId" class="control-label"></label>
                            <input asp-for="CurrentUserId" class="form-control" type="hidden" value="@ViewData["CurrentUserId"]" />
                            <input asp-for="CurrentUserName" class="form-control" value="@ViewData["CurrentUserName"]" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="UsuarioAsignacionId" class="control-label"></label>
                            <select asp-for="UsuarioAsignacionId" class="form-control" asp-items="ViewBag.UsuarioAsignacionId"></select>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-2" style="flex: 1;" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle"></i> Regresar
                            </a>
                            <button type="submit" class="btn btn-danger ms-2" style="flex: 1;" onclick="showLoader()">
                                <i class="bi bi-plus-circle"></i> Crear
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}
