@model TotalHRInsight.DAL.Planilla
@{
    ViewData["Title"] = "Detalles de Planilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="max-height:150px;">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-secondary p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="text-white h3 mb-0">Planilla #@Model.IdPlanilla</h1>
                        <span class="badge bg-light text-secondary">Detalles</span>
                    </div>
                </div>

                <div class="card-body px-4">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item px-0">
                            <small class="text-muted d-block">@Html.DisplayNameFor(model => model.FechaInicio)</small>
                            <span class="fs-5">@Html.DisplayFor(model => model.FechaInicio)</span>
                        </div>

                        <div class="list-group-item py-3 px-0">
                            <small class="text-muted d-block">@Html.DisplayNameFor(model => model.FechaFin)</small>
                            <span class="fs-5">@Html.DisplayFor(model => model.FechaFin)</span>
                        </div>

                        <div class="list-group-item py-3 px-0">
                            <small class="text-muted d-block">@Html.DisplayNameFor(model => model.MontoTotal)</small>
                            <span class="fs-5 text-success fw-bold">₡ @Html.DisplayFor(model => model.MontoTotal)</span>
                        </div>

                        <div class="list-group-item py-3 px-0">
                            <small class="text-muted d-block">@Html.DisplayNameFor(model => model.UsuarioCreacion)</small>
                            <span class="fs-5">
                                @Html.DisplayFor(model => model.UsuarioCreacion.Nombre)
                                @Html.DisplayFor(model => model.UsuarioCreacion.PrimerApellido)
                                @Html.DisplayFor(model => model.UsuarioCreacion.SegundoApellido)
                            </span>
                        </div>

                        <div class="list-group-item py-3 px-0">
                            <small class="text-muted d-block">@Html.DisplayNameFor(model => model.UsuarioAsignacion)</small>
                            <span class="fs-5">
                                @Html.DisplayFor(model => model.UsuarioAsignacion.Nombre)
                                @Html.DisplayFor(model => model.UsuarioAsignacion.PrimerApellido)
                                @Html.DisplayFor(model => model.UsuarioAsignacion.SegundoApellido)
                            </span>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light  border-top">
                    <div class="d-flex gap-3">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 flex-grow-1" onclick="showLoader()">
                            <i class="bi bi-arrow-left-circle me-2"></i>Regresar
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.IdPlanilla" class="btn btn-primary btn-lg px-4 flex-grow-1" onclick="showLoader()">
                            <i class="bi bi-pencil-square me-2"></i>Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}