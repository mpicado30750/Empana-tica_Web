@model TotalHRInsight.DAL.Planilla

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-inicio {
        background-color: #B42D29;
        border-color: #B42D29;
        color: #FAFCFD;
    }
</style>

<h1>Detalles de la Planilla</h1>

<div>
    <h4>Planilla</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MontoTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MontoTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioCrecionId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioCrecionId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdAsistencia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdAsistencia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdPermiso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPermiso)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-inicio" asp-action="Edit" asp-route-id="@Model?.IdPlanilla">Editar</a> |
    <a asp-action="Index">Volver a la Lista</a>
</div>
