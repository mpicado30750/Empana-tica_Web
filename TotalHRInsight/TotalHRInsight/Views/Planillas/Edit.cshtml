@model TotalHRInsight.DAL.Planilla
@{
    ViewData["Title"] = "Editar Planilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-secondary p-4">
                    <h1 class="text-white h3 mb-0">Editar Planilla #@Model.IdPlanilla</h1>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                        <input type="hidden" asp-for="IdPlanilla" />

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="FechaInicio" class="form-control" placeholder="Fecha Inicio" />
                                    <label asp-for="FechaInicio"></label>
                                    <span asp-validation-for="FechaInicio" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="FechaFin" class="form-control" placeholder="Fecha Fin" />
                                    <label asp-for="FechaFin"></label>
                                    <span asp-validation-for="FechaFin" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="MontoTotal" class="form-control" placeholder="Monto Total" />
                                    <label asp-for="MontoTotal"></label>
                                    <span asp-validation-for="MontoTotal" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="UsuarioCreacionId" class="form-select" asp-items="ViewBag.UsuarioCreacionId">
                                    </select>
                                    <label asp-for="UsuarioCreacionId"></label>
                                    <span asp-validation-for="UsuarioCreacionId" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="UsuarioAsignacionId" class="form-select" asp-items="ViewBag.UsuarioAsignacionId">
                                    </select>
                                    <label asp-for="UsuarioAsignacionId"></label>
                                    <span asp-validation-for="UsuarioAsignacionId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-3 mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle me-2"></i>Regresar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-4 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-check2-circle me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
    <style>
        .form-floating > .form-control:focus,
        .form-floating > .form-select:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
        }
    </style>
}