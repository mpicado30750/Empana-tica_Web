<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TotalHRInsight</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <!-- Otros estilos CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">
    <!-- No Borrar -->
    <link href="~/lib/leaflet/leaflet.css" rel="stylesheet" />
    <link href="~/lib/leaflet/leaflet.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- -------------- -->
</head>
<body>
    <div class="d-flex">
        @if (User.Identity.IsAuthenticated)
        {
            <nav class="sidebar bg-dark text-light d-flex flex-column p-3" style="min-height: 100vh;" aria-label="Sidebar">
                <h3 class="sidebar-heading">
                    <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        <span style="color: #FFFFFF; font-weight: bold; margin-right: 10px;">TotalHRInsight</span>
                        <img src="~/images/Empana-tica_Logo.jpg" class="img-fluid" alt="Empana-tica Logo" style="max-height: 30px;">
                    </a>
                </h3>
                <ul class="nav flex-column mb-auto">
                    <!-- Sección de Asistencias -->
                    <div class="container">
                        <a class="nav-link text-bold" asp-area="" asp-controller="Asistencias" asp-action="Index"><i class="bi bi-check2-circle"></i> Asistencia</a>
                    </div>

                    <!-- Sección de Pedidos -->
                    <div class="container">
                        <a class="nav-link text-bold" asp-area="" asp-controller="Pedidos" asp-action="Index"><i class="bi bi-basket"></i> Pedidos</a>
                    </div>

                    <!-- Sección de Inventarios y Productos -->
                    <div class="container">
                        <button type="button" class="btn nav-link" data-toggle="collapse" data-target="#inventarios-productos-pedidos">
                            Inventario <i class="bi bi-caret-right-fill"></i>
                        </button>
                        <div id="inventarios-productos-pedidos" class="collapse">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Inventarios" asp-action="Index"><i class="bi bi-box-seam"></i> Inventario</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Productos" asp-action="Index"><i class="bi bi-bookshelf"></i> Productos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Proveedors" asp-action="Index"><i class="bi bi-truck"></i> Proveedor</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Sucursals" asp-action="Index"> <i class="bi bi-shop-window"></i> Sucursales</a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Sección de Usuarios, Deducciones, Permisos y Salarios -->
                    <div class="container">
                        <button type="button" class="btn nav-link" data-toggle="collapse" data-target="#sucursales-usuarios-deducciones">
                            Usuarios <i class="bi bi-caret-right-fill"></i>
                        </button>
                        <div id="sucursales-usuarios-deducciones" class="collapse">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Index"><i class="bi bi-person-badge"></i> Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Deduccions" asp-action="Index"><i class="bi bi-receipt"></i> Deducciones</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Permisoes" asp-action="Index"><i class="bi bi-calendar4-range"></i> Permiso</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Salarios" asp-action="Index"><i class="bi bi-wallet-fill"></i> Salarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Planillas" asp-action="Index"><i class="bi bi-wallet-fill"></i> Planilla</a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Sección de Estados y Medidas -->
                    <div class="container">
                        <button type="button" class="btn nav-link" data-toggle="collapse" data-target="#estados-medidas">
                            Tipos <i class="bi bi-caret-right-fill"></i>
                        </button>
                        <div id="estados-medidas" class="collapse">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Estados" asp-action="Index">Estados</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Medidas" asp-action="Index">Medidas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="TipoDeduccions" asp-action="Index">Tipo de Deducciones</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="TipoPermiso" asp-action="Index">Tipo Permiso</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Categorias" asp-action="Index">Categoría</a>
                                </li>
                            </ul>
                        </div>
                    </div>

                </ul>

                <div class="mt-auto">
                    <hr class="bg-light" />
                    <span>&copy; 2024</span>
                    <span>
                        <a class="nav-link text-muted footer-text" asp-area="" asp-controller="Home" asp-action="Index">TotalHRInsight</a>
                        <a class="nav-link text-muted footer-text" asp-area="" asp-controller="Home" asp-action="Privacy">Sobre Nosotros</a>
                    </span>
                </div>
            </nav>
        }
        <div class="main-content flex-grow-1">
            <header>
                <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <!-- Info Adicional -->
                            </ul>
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </nav>
            </header>
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.10/signalr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/notification.js"></script>
    <script>
        // Función para el menú collapsable
        $(document).ready(function () {
            $('.collapse').on('shown.bs.collapse', function () {
                var button = $(this).prev('button');
                button.find('i').removeClass('bi-caret-right-fill').addClass('bi-caret-down');
            });

            $('.collapse').on('hidden.bs.collapse', function () {
                var button = $(this).prev('button');
                button.find('i').removeClass('bi-caret-down').addClass('bi-caret-right-fill');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
