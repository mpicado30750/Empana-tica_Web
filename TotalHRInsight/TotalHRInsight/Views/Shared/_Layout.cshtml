<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TotalHRInsight</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Estilos personalizados */
        .footer-text {
            font-size: 0.9rem; /* Tamaño de fuente más pequeño para TotalHRInsight */
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar bg-dark text-light p-3">
            <h3 class="sidebar-heading">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span style="color: #FFFFFF; font-weight: bold; margin-right: 10px;">TotalHRInsight</span>
                    <img src="~/images/Empana-tica_Logo.jpg" class="img-fluid" alt="Empana-tica Logo" style="max-height: 30px;">
                </a>
            </h3>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Asistencias" asp-action="Index">Asistencia</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Incidencias" asp-action="Index">Incidencia</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Productoes" asp-action="Index">Inventario</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Planillas" asp-action="Index">Planilla</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Permisoes" asp-action="Index">Permiso</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Pedidoes" asp-action="Index">Pedidos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="PedidosProductos" asp-action="Index">PedidosProductos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Sucursals" asp-action="Index">Sucursales</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Index">Usuarios</a>
                </li>

                <!-- Footer dentro del sidebar -->
                <li class="nav-item mt-auto">
                    <hr class="bg-light" />
                    <span>
                          &copy; 2024
                    </span>
                    <span>
                        <a class="nav-link text-muted footer-text" asp-area="" asp-controller="Home" asp-action="FirstPage">TotalHRInsight</a>
                        <a class="nav-link text-muted footer-text" asp-area="" asp-controller="Home" asp-action="Privacy">Sobre Nosotros</a>
                    </span>
                </li>
            </ul>
        </nav>

        <div class="main-content flex-grow-1">
            <header>
                <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TotalHRInsight</a>

                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <!-- Info Adicional -->
                            </ul>
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </nav>
            </header>
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
