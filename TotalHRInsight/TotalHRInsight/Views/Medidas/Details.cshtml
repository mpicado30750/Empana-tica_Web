@model TotalHRInsight.DAL.Medida
@{
    ViewData["Title"] = "Detalles Medida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <h1 class="text-center mb-4 text-secondary">Detalles de Medida</h1>
    <hr class="mb-4" />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-header bg-secondary text-white py-3">
                    <h5 class="card-title mb-0">Información Detallada</h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row bg-light p-3 rounded-3">
                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.NombreMedida)</dt>
                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.NombreMedida)</dd>
                    </dl>
                    <div class="d-grid gap-3 d-md-flex justify-content-md-between mt-4">
                        <a asp-action="Edit" asp-route-IdMedida="@Model.IdMedida" class="btn btn-warning btn-lg px-4" onclick="showLoader()">
                            <i class="bi bi-pencil-square me-2"></i>Editar
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4" onclick="showLoader()">
                            <i class="bi bi-arrow-left-circle me-2"></i>Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}