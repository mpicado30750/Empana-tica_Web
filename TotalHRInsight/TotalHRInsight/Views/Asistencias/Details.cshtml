@model TotalHRInsight.DAL.Asistencia
@{
    ViewData["Title"] = "Detalles de Asistencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-secondary text-white py-3">
                    <h5 class="card-title mb-0 text-center">
                        <i class="bi bi-info-circle me-2"></i>Detalles de Asistencia
                    </h5>
                </div>
                <div class="card-body p-4">
                    <!-- Sección de Empleado -->
                    <div class="mb-4 pb-3 border-bottom">
                        <div class="d-flex align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Empleado</h6>
                                <p class="h6 mb-0">
                                    @($"{Model.UsuarioCreacion.Nombre} {Model.UsuarioCreacion.PrimerApellido ?? ""} {Model.UsuarioCreacion.SegundoApellido ?? ""}".Trim())
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Sección de Horarios -->
                    <div class="row mb-4 g-4">
                        <div class="col-md-6">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-3">
                                        <i class="bi bi-clock text-primary me-2"></i>Hora de Entrada
                                    </h6>
                                    <p class="h5 mb-0">@Html.DisplayFor(model => model.FechaEntrada)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-3">
                                        <i class="bi bi-clock-history text-primary me-2"></i>Hora de Salida
                                    </h6>
                                    <p class="h5 mb-0">@Html.DisplayFor(model => model.FechaSalida)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sección de Ubicaciones -->
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-3">
                                        <i class="bi bi-geo-alt text-danger me-2"></i>Ubicación de Entrada
                                    </h6>
                                    <p class="mb-0">@Html.DisplayFor(model => model.UbicacionEntrada)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-3">
                                        <i class="bi bi-geo-alt-fill text-danger me-2"></i>Ubicación de Salida
                                    </h6>
                                    <p class="mb-0">@Html.DisplayFor(model => model.UbicacionSalida)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="d-flex gap-2 justify-content-center mt-4">
                        <a asp-action="Edit"
                           asp-route-id="@Model.IdAsistencia"
                           class="btn btn-warning">
                            <i class="bi bi-pencil-square me-1"></i>Editar
                        </a>
                        <a asp-action="Index"
                           class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i>Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>