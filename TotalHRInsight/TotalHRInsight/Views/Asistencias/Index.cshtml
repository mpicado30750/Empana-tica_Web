@model IEnumerable<TotalHRInsight.DAL.Asistencia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaSalida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UbicacionEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UbicacionSalida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioCreacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaSalida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UbicacionEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UbicacionSalida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioCreacion.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAsistencia">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAsistencia">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAsistencia">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
