@model TotalHRInsight.Models.Asistencia.CrearAsistencia
@{
    ViewData["Title"] = "Crear Asistencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card border-0 shadow">
                <div class="card-header bg-secondary text-white py-2">
                    <h5 class="card-title mb-0 text-center">
                        <i class="bi bi-calendar-check me-1"></i>Crear Asistencia
                    </h5>
                </div>
                <div class="card-body p-3">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 mb-3 small"></div>

                        <div class="form-group mb-3">
                            <label asp-for="FechaEntrada" class="form-label">
                                <i class="bi bi-clock me-1"></i>Hora de Entrada
                            </label>
                            <input asp-for="FechaEntrada" class="form-control" />
                            <span asp-validation-for="FechaEntrada" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FechaSalida" class="form-label">
                                <i class="bi bi-clock-history me-1"></i>Hora de Salida
                            </label>
                            <input asp-for="FechaSalida" class="form-control" />
                            <span asp-validation-for="FechaSalida" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">
                                <i class="bi bi-building me-1"></i>Sucursal
                            </label>
                            <select asp-for="IdSucursal"
                                    class="form-select"
                                    asp-items="ViewBag.IdSucursal"
                                    required>
                                <option value="">Seleccione una sucursal...</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">
                                <i class="bi bi-person me-1"></i>Empleado
                            </label>
                            <select asp-for="UsuarioCreacionId"
                                    class="form-select"
                                    asp-items="ViewBag.UsuarioCreacionId">
                                <option value="">Seleccione un empleado...</option>
                            </select>
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a asp-action="Index"
                               class="btn btn-outline-secondary"
                               onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle me-1"></i>Regresar
                            </a>
                            <button type="submit"
                                    class="btn btn-primary"
                                    onclick="showLoader()">
                                <i class="bi bi-plus-circle me-1"></i>Añadir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")
<script src="~/js/loader.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}