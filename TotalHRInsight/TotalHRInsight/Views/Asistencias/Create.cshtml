@model TotalHRInsight.Models.Asistencia.CrearAsistencia

@{
    ViewData["Title"] = "Crear Asistencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Crear Asistencia</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group mb-3">
                            <label asp-for="FechaEntrada" class="form-label"></label>
                            <input asp-for="FechaEntrada" class="form-control" />
                            <span asp-validation-for="FechaEntrada" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="FechaSalida" class="form-label"></label>
                            <input asp-for="FechaSalida" class="form-control" />
                            <span asp-validation-for="FechaSalida" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label  class="form-label">Sucursal</label>
                            <select asp-for="IdSucursal" class="form-control" asp-items="ViewBag.IdSucursal" required></select>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label"> Empleado</label>
                            <select asp-for="UsuarioCreacionId" class="form-control" asp-items="ViewBag.UsuarioCreacionId"></select>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-2" style="flex: 1;" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle"></i> Regresar
                            </a>
                            <button type="submit" class="btn btn-danger ms-2" style="flex: 1;" onclick="showLoader()">
                                <i class="bi bi-plus-circle"></i> Añadir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_LoaderModal")
<script src="~/js/loader.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
