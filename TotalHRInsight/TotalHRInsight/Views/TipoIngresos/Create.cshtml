@model TotalHRInsight.DAL.TipoIngreso
@{
    ViewData["Title"] = "Crear Tipo de Ingreso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <h1 class="text-center display-4 mb-4 text-secondary">Crear Tipo de Ingreso</h1>
    <hr class="mb-4" />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-header bg-secondary text-white py-3">
                    <h5 class="card-title mb-0">Información del Ingreso</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
                        <div class="form-group mb-4">
                            <label asp-for="NombreIngreso" class="form-label fw-bold"></label>
                            <input asp-for="NombreIngreso" class="form-control form-control-lg"
                                   placeholder="Ingrese el nombre del ingreso" />
                            <span asp-validation-for="NombreIngreso" class="text-danger small"></span>
                        </div>
                        <div class="d-grid gap-3 d-md-flex justify-content-md-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle me-2"></i>Regresar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-4 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-plus-circle me-2"></i>Añadir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}