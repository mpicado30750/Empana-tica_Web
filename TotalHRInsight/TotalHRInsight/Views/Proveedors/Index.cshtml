@model IEnumerable<TotalHRInsight.DAL.Proveedor>
@{
    ViewData["Title"] = "Lista de Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h1 class="mb-0 text-secondary">Lista de Proveedores</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary me-2" onclick="showLoader()">
                <i class="bi bi-plus-circle me-2"></i>Crear Nuevo Registro
            </a>
            <a asp-action="ExportToExcel" class="btn btn-success" onclick="showLoader()">
                <i class="bi bi-download me-2"></i>Descargar datos
            </a>
        </div>
    </div>
    <hr class="border-secondary" />
    <div class="row row-cols-1 row-cols-md-3 g-4 overflow-auto" style="max-height: 70vh;">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-secondary">
                    <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">@item.NombreProveedor</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h6 class="card-text text-muted"><strong>Descripción:</strong></h6>
                            <p class="mb-0 text-truncate">@item.Descripcion</p>
                        </div>
                        <div class="mb-3">
                            <h6 class="card-text text-muted"><strong>Correo Electrónico:</strong></h6>
                            <p class="mb-0">@item.Email</p>
                        </div>
                        <div class="mb-3">
                            <h6 class="card-text text-muted"><strong>Teléfono:</strong></h6>
                            <p class="mb-0">@item.Telefono</p>
                        </div>
                        <div class="mb-3">
                            <h6 class="card-text text-muted"><strong>Método de Pago:</strong></h6>
                            <p class="mb-0">@item.MetodoPago</p>
                        </div>
                    </div>
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-IdProveedor="@item.IdProveedor" class="btn btn-outline-warning btn-sm" onclick="showLoader()">
                                <i class="bi bi-pencil-square me-2"></i>Editar
                            </a>
                            <a asp-action="Details" asp-route-IdProveedor="@item.IdProveedor" class="btn btn-outline-info btn-sm" onclick="showLoader()">
                                <i class="bi bi-info-circle me-2"></i>Detalles
                            </a>@* 
                            <a asp-action="Delete" asp-route-IdProveedor="@item.IdProveedor" class="btn btn-outline-danger btn-sm" onclick="showLoader()">
                                <i class="bi bi-trash me-2"></i>Eliminar
                            </a> *@
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@Html.Partial("_LoaderModal")
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}