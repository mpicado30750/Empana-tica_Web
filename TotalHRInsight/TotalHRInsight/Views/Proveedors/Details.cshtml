@model TotalHRInsight.DAL.Proveedor
@{
    ViewData["Title"] = "Detalles Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-info text-white text-center">
                    <h2 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Detalles de Proveedor
                    </h2>
                </div>
                <div class="card-body">
                    <dl class="row" style="max-height: 300px; overflow-y: auto;">
                        <dt class="col-sm-4 text-primary">Nombre Proveedor</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreProveedor)</dd>
                        <dt class="col-sm-4 text-primary">Descripción</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
                        <dt class="col-sm-4 text-primary">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                        <dt class="col-sm-4 text-primary">Teléfono</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>
                        <dt class="col-sm-4 text-primary">Método Pago</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MetodoPago)</dd>
                    </dl>
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Edit" asp-route-IdProveedor="@Model.IdProveedor" class="btn btn-warning btn-lg flex-grow-1 me-2" onclick="showLoader()">
                            <i class="bi bi-pencil-square me-2"></i>Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-lg flex-grow-1 ms-2" onclick="showLoader()">
                            <i class="bi bi-arrow-left-circle me-2"></i>Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_LoaderModal")
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}