@model IEnumerable<TotalHRInsight.DAL.Producto>
@{
    ViewData["Title"] = "Índice Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid px-4" style="max-width: 1560px;">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h1 class="mb-0 text-secondary">Lista de Productos</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary me-2" onclick="showLoader()">
                <i class="bi bi-plus-circle me-2"></i>Crear Nuevo Registro
            </a>
            <a asp-action="ExportToExcel" class="btn btn-success" onclick="showLoader()">
                <i class="bi bi-download me-2"></i>Descargar datos
            </a>
        </div>
    </div>
    <hr class="border-secondary" />
    <div class="row row-cols-1 row-cols-md-3 g-4 overflow-auto" style="max-height: 70vh;">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-secondary">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="card-title mb-0">@item.NombreProducto</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text"><strong>Categoria:</strong> @Html.DisplayFor(modelItem => item.Categorias.NombreCategoria)</p>
                        <p class="card-text"><strong>Fecha de Vencimiento:</strong> @Html.DisplayFor(modelItem => item.FechaVencimiento)</p>
                        <p class="card-text"><strong>Precio Unitario:</strong> ₡ @Html.DisplayFor(modelItem => item.PrecioUnitario)</p>
                        <p class="card-text"><strong>Medidas:</strong> @Html.DisplayFor(modelItem => item.Medidas.NombreMedida)</p>
                    </div>
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-IdProducto="@item.IdProducto" class="btn btn-outline-warning" onclick="showLoader()">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-IdProducto="@item.IdProducto" class="btn btn-outline-info" onclick="showLoader()">
                                <i class="bi bi-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-IdProducto="@item.IdProducto" class="btn btn-outline-danger" onclick="showLoader()">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@Html.Partial("_LoaderModal")
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}