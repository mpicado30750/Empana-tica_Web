@model TotalHRInsight.DAL.Producto

@{
    ViewData["Title"] = "Editar Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="text-center">Editar Producto</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="IdProducto" />
                        <div class="form-group mb-3">
                            <label asp-for="NombreProducto" class="form-label"></label>
                            <input asp-for="NombreProducto" class="form-control" />
                            <span asp-validation-for="NombreProducto" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <input asp-for="Descripcion" class="form-control" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="FechaVencimiento" class="form-label"></label>
                            <input asp-for="FechaVencimiento" class="form-control" />
                            <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="PrecioUnitario" class="form-label"></label>
                            <input asp-for="PrecioUnitario" class="form-control" />
                            <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Medidas.NombreMedida" class="form-label"></label>
                            <select asp-for="MedidasId" class="form-control" asp-items="ViewBag.MedidasId"></select>
                            <span asp-validation-for="MedidasId" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-danger btn-block">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                    <div class="text-center">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

