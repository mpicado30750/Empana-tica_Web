@model TotalHRInsight.DAL.Producto

@{
    ViewData["Title"] = "Crear Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Añadir Producto</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group mb-3">
                            <label asp-for="NombreProducto" class="form-label"></label>
                            <input asp-for="NombreProducto" class="form-control" />
                            <span asp-validation-for="NombreProducto" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="FechaVencimiento" class="form-label"></label>
                            <input asp-for="FechaVencimiento" class="form-control" />
                            <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="PrecioUnitario" class="form-label"></label>
                            <input asp-for="PrecioUnitario" class="form-control" />
                            <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Medidas.NombreMedida" class="form-label"></label>
                            <select asp-for="Medidas.NombreMedida" class="form-control" asp-items="ViewBag.MedidasId"></select>
                            <span asp-validation-for="Medidas.NombreMedida" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoriaId" class="control-label"></label>
                            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProveedorId" class="control-label"></label>
                            <select asp-for="ProveedorId" class="form-control" asp-items="ViewBag.ProveedorId"></select>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-2" style="flex: 1;" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle"></i> Regresar
                            </a>
                            <button type="submit" class="btn btn-danger ms-2" style="flex: 1;" onclick="showLoader()">
                                <i class="bi bi-plus-circle"></i> Añadir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
@Html.Partial("_LoaderModal")

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}
