@model TotalHRInsight.DAL.Pedido

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Editar Pedido</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="IdPedido" />
                        <div class="form-group mb-3">
                            <label asp-for="FechaPedido" class="form-label"></label>
                            <input asp-for="FechaPedido" class="form-control" />
                            <span asp-validation-for="FechaPedido" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="FechaEntrega" class="form-label"></label>
                            <input asp-for="FechaEntrega" class="form-control" />
                            <span asp-validation-for="FechaEntrega" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="UsuarioCreacion" class="form-label"></label>
                            <select asp-for="UsuarioCreacion.Nombre" class="form-control" asp-items="ViewBag.UsuarioCreacionId"></select>
                            <span asp-validation-for="UsuarioCreacion" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="IdSucursal" class="form-label"></label>
                            <select asp-for="IdSucursal" class="form-control" asp-items="ViewBag.IdSucursal"></select>
                            <span asp-validation-for="IdSucursal" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="IdEstado" class="form-label"></label>
                            <select asp-for="Estado.EstadoSolicitud" class="form-control" asp-items="ViewBag.IdEstado"></select>
                            <span asp-validation-for="Estado.EstadoSolicitud" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="MontoTotal" class="form-label"></label>
                            <input asp-for="MontoTotal" class="form-control" />
                            <span asp-validation-for="MontoTotal" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-danger btn-block">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                    <div class="text-center">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}