@model TotalHRInsight.DAL.Pedido
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">Editar Pedido</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="IdPedido" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="FechaPedido" class="form-label"></label>
                                    <input asp-for="FechaPedido" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="FechaEntrega" class="form-label"></label>
                                    <input asp-for="FechaEntrega" class="form-control" type="date" />
                                    <span asp-validation-for="FechaEntrega" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="UsuarioCreacion.Nombre" class="form-label">Usuario Creación</label>
                                    <input asp-for="UsuarioCreacion.Nombre" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Sucursal.NombreSucursal" class="form-label">Sucursal</label>
                                    <input asp-for="Sucursal.NombreSucursal" class="form-control" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Estado.EstadoSolicitud" class="form-label">Estado</label>
                                    <select asp-for="IdEstado" class="form-control" asp-items="ViewBag.IdEstado"></select>
                                    <span asp-validation-for="IdEstado" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="MontoTotal" class="form-label"></label>
                                    <input asp-for="MontoTotal" class="form-control" readonly />
                                </div>
                            </div>
                        </div>

                        <h4 class="mt-4">Productos del Pedido</h4>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Cantidad</th>
                                        <th>Precio Unitario</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.PedidosProductos)
                                    {
                                        <tr>
                                            <td>@item.Producto.NombreProducto</td>
                                            <td>@item.Cantidad</td>
                                            <td>@item.Producto.PrecioUnitario.ToString("C", new System.Globalization.CultureInfo("es-CR"))</td>
                                            <td>@((item.Cantidad * item.Producto.PrecioUnitario).ToString("C", new System.Globalization.CultureInfo("es-CR")))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="d-grid gap-2 mb-3 mt-4">
                            <button type="submit" class="btn btn-danger btn-block">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                    <div class="text-center">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}