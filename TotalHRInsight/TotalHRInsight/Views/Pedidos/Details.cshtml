@model TotalHRInsight.DAL.Pedido

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Detalles Pedidos</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.FechaPedido)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FechaPedido)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.FechaEntrega)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FechaEntrega)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.MontoTotal)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.MontoTotal)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Sucursal)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Sucursal.NombreSucursal)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Estado.EstadoSolicitud)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.UsuarioCreacion)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UsuarioCreacion.Nombre)
                        </dd>
                    </dl>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model?.IdPedido" class="btn btn-warning">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
