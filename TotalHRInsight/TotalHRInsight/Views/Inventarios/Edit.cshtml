@model TotalHRInsight.Models.Inventario.EditarInventario
@{
    ViewData["Title"] = "Editar Inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-warning text-white text-center py-3">
                    <h2 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Editar Registro de Inventario
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="IdInventario" />

                        <div class="form-floating mb-3">
                            <select asp-for="ProductoId" class="form-select" asp-items="ViewBag.ProductoId">
                                <option value="">Selecciona un Producto</option>
                            </select>
                            <label asp-for="ProductoId" class="form-label">Producto</label>
                            <span asp-validation-for="ProductoId" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="SucursalId" class="form-select" asp-items="ViewBag.SucursalId">
                                <option value="">Selecciona una Sucursal</option>
                            </select>
                            <label asp-for="SucursalId" class="form-label">Sucursal</label>
                            <span asp-validation-for="SucursalId" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="CantidadDisponible" class="form-control" placeholder="Cantidad Disponible" />
                            <label asp-for="CantidadDisponible" class="form-label">Cantidad Disponible</label>
                            <span asp-validation-for="CantidadDisponible" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-3 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg flex-fill me-md-2" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-success btn-lg flex-fill ms-md-2" onclick="showLoader()">
                                <i class="bi bi-save me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}