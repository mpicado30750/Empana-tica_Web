@model TotalHRInsight.DAL.Inventario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="text-center">Crear Inventario</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group mb-3">
                            <label asp-for="UsuarioCreacionid" class="form-label"></label>
                            <select asp-for="UsuarioCreacion.Nombre" class="form-control" asp-items="ViewBag.UsuarioCreacionId"></select>
                            <span asp-validation-for="UsuarioCreacionid" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="UsuarioModificacionid" class="form-label"></label>
                            <select asp-for="UsuarioModificacion.Nombre" class="form-control" asp-items="ViewBag.UsuarioModificacionid"></select>
                            <span asp-validation-for="UsuarioModificacionid" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="FechaCreacion" class="form-label"></label>
                            <input asp-for="FechaCreacion" class="form-control" />
                            <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="FechaModificacion" class="form-label"></label>
                            <input asp-for="FechaModificacion" class="form-control" />
                            <span asp-validation-for="FechaModificacion" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CantidadDisponible" class="form-label"></label>
                            <select asp-for="CantidadDisponible" class="form-control" asp-items="ViewBag.MedidasId"></select>
                            <span asp-validation-for="CantidadDisponible" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="SucursalId" class="form-label"></label>
                            <select asp-for="Sucursal.NombreSucursal" class="form-control" asp-items="ViewBag.SucursalId"></select>
                            <span asp-validation-for="Sucursal.NombreSucursal" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ProductoId" class="form-label"></label>
                            <select asp-for="Producto.NombreProducto" class="form-control" asp-items="ViewBag.ProductoId"></select>
                            <span asp-validation-for="Producto.NombreProducto" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-block">
                                <i class="bi bi-plus-circle"></i> Añadir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Regresar
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
