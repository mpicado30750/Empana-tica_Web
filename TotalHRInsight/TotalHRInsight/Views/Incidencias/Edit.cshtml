@model TotalHRInsight.DAL.Incidencia

@{
    ViewData["Title"] = "Editar Incidencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Incidencia</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdIncidencia" />
            <div class="form-group">
                <label asp-for="NombreIncidencia" class="control-label"></label>
                <input asp-for="NombreIncidencia" class="form-control" />
                <span asp-validation-for="NombreIncidencia" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
