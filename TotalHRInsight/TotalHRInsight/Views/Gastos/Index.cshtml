@model IEnumerable<TotalHRInsight.DAL.Gasto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoGasto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CierreCaja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoGasto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoGasto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CierreCaja.UsuarioCreacionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoGasto.NombreGasto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdGasto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdGasto">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdGasto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
