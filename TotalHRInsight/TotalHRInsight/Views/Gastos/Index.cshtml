@model IEnumerable<TotalHRInsight.DAL.Gasto>

@{
    ViewData["Title"] = "Índice de Gastos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center my-4">
    <h1 class="mb-0">Gastos</h1>
    <div>
        <a asp-action="Create" class="btn btn-danger me-2" onclick="showLoader()">
            <i class="bi bi-plus-circle"></i> Crear Nuevo Registro
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered table-striped shadow-lg rounded custom-table">
        <thead class="bg-danger text-white">
            <tr>
                <th scope="col" class="rounded-top-left">
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.MontoGasto)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.CierreCaja.Fecha)
                </th>
                <th scope="col" class="rounded-top-right">
                    @Html.DisplayNameFor(model => model.TipoGasto.NombreGasto)
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="bg-light">
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MontoGasto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CierreCaja.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoGasto.NombreGasto)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-IdGasto="@item.IdGasto" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-IdGasto="@item.IdGasto" class="btn btn-sm btn-info">
                            <i class="bi bi-info-circle"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-IdGasto="@item.IdGasto" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}
