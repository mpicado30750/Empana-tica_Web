@model IEnumerable<TotalHRInsight.DAL.Gasto>
@{
    ViewData["Title"] = "Índice de Gastos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-secondary fw-bold">Gastos</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm" onclick="showLoader()">
                <i class="bi bi-plus-circle me-2"></i>Crear Nuevo Registro
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive" style="max-height: 70vh;">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr class="bg-secondary bg-opacity-10">
                            <th class="px-4 py-3 border-0">
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th class="px-4 py-3 border-0">
                                @Html.DisplayNameFor(model => model.MontoGasto)
                            </th>
                            <th class="px-4 py-3 border-0">
                                @Html.DisplayNameFor(model => model.CierreCaja.Fecha)
                            </th>
                            <th class="px-4 py-3 border-0">
                                @Html.DisplayNameFor(model => model.TipoGasto.NombreGasto)
                            </th>
                            <th class="px-4 py-3 border-0 text-center" style="width: 200px;">
                                Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom">
                                <td class="px-4 py-3">
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                                <td class="px-4 py-3">
                                    @Html.DisplayFor(modelItem => item.MontoGasto)
                                </td>
                                <td class="px-4 py-3">
                                    @Html.DisplayFor(modelItem => item.CierreCaja.Fecha)
                                </td>
                                <td class="px-4 py-3">
                                    @Html.DisplayFor(modelItem => item.TipoGasto.NombreGasto)
                                </td>
                                <td class="px-4 py-3 text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-IdGasto="@item.IdGasto"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-IdGasto="@item.IdGasto"
                                           class="btn btn-outline-info btn-sm">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-IdGasto="@item.IdGasto"
                                           class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}