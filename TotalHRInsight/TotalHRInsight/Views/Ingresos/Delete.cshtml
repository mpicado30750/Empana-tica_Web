@model TotalHRInsight.DAL.Ingreso
@{
    ViewData["Title"] = "Eliminar Ingreso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border border-danger border-2 shadow-lg">
                <div class="card-header bg-danger text-white p-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
                        <div>
                            <h1 class="h3 mb-1">Eliminar Ingreso #@Model.IdIngreso</h1>
                            <p class="mb-0">Esta acción no se puede deshacer</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        ¿Está seguro de que desea eliminar este ingreso?
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item py-3 px-0">
                                    <small class="text-muted d-block">@Html.DisplayNameFor(model => model.Fecha)</small>
                                    <span class="fs-5">@Html.DisplayFor(model => model.Fecha)</span>
                                </div>
                                <div class="list-group-item py-3 px-0">
                                    <small class="text-muted d-block">@Html.DisplayNameFor(model => model.MontoIngreso)</small>
                                    <span class="fs-5 text-danger fw-bold">₡ @Html.DisplayFor(model => model.MontoIngreso)</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item py-3 px-0">
                                    <small class="text-muted d-block">@Html.DisplayNameFor(model => model.CierreCaja)</small>
                                    <span class="fs-5">@Html.DisplayFor(model => model.CierreCaja.UsuarioCreacion.Nombre)</span>
                                </div>
                                <div class="list-group-item py-3 px-0">
                                    <small class="text-muted d-block">@Html.DisplayNameFor(model => model.TipoIngreso)</small>
                                    <span class="badge bg-info fs-6">@Html.DisplayFor(model => model.TipoIngreso.NombreIngreso)</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4 pt-3 border-top">
                        <input type="hidden" name="IdIngreso" value="@Model.IdIngreso" />
                        <div class="d-flex gap-3">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-4 flex-grow-1" onclick="return confirm('¿Está seguro de eliminar este ingreso?');">
                                <i class="bi bi-trash3-fill me-2"></i>Eliminar Permanentemente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}