@model TotalHRInsight.DAL.Ingreso

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Ingreso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdIngreso" />
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoIngresoId" class="control-label"></label>
                <select asp-for="TipoIngresoId" class="form-control" asp-items="ViewBag.TipoIngresoId"></select>
                <span asp-validation-for="TipoIngresoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoIngreso" class="control-label"></label>
                <input asp-for="MontoIngreso" class="form-control" />
                <span asp-validation-for="MontoIngreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CierreId" class="control-label"></label>
                <select asp-for="CierreId" class="form-control" asp-items="ViewBag.CierreId"></select>
                <span asp-validation-for="CierreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<!-- Incluir la vista parcial del loader modal -->
@Html.Partial("_LoaderModal")
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
