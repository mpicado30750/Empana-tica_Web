@model TotalHRInsight.DAL.Ingreso
@{
    ViewData["Title"] = "Editar Ingreso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-gradient p-4" style="background-color: #3498db;">
                    <h1 class="text-white h3 mb-0">Editar Ingreso #@Model.IdIngreso</h1>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                        <input type="hidden" asp-for="IdIngreso" />

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Fecha" class="form-control" placeholder="Fecha" />
                                    <label asp-for="Fecha"></label>
                                    <span asp-validation-for="Fecha" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="TipoIngresoId" class="form-select" asp-items="ViewBag.TipoIngresoId"></select>
                                    <label asp-for="TipoIngresoId"></label>
                                    <span asp-validation-for="TipoIngresoId" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="MontoIngreso" class="form-control" placeholder="Monto" />
                                    <label asp-for="MontoIngreso"></label>
                                    <span asp-validation-for="MontoIngreso" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control bg-light" value="@ViewData["FechaCierre"]" disabled placeholder="Cierre" />
                                    <label>Cierre</label>
                                    <input type="hidden" asp-for="CierreId" value="@ViewData["CierreId"]" />
                                    <span asp-validation-for="CierreId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-3 mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle me-2"></i>Regresar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-4 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-check2-circle me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
    <style>
        .form-floating > .form-control:focus,
        .form-floating > .form-select:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
        }
    </style>
}