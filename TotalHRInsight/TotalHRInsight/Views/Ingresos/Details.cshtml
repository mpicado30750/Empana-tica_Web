@model TotalHRInsight.DAL.Ingreso
@{
    ViewData["Title"] = "Detalles de Ingreso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-secondary p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="text-white h3 mb-0">Ingreso #@Model.IdIngreso</h1>
                        <span class="badge bg-light text-primary">Detalles</span>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item py-3 px-0">
                                    <small class="text-muted d-block">@Html.DisplayNameFor(model => model.Fecha)</small>
                                    <span class="fs-5">@Html.DisplayFor(model => model.Fecha)</span>
                                </div>
                                <div class="list-group-item py-3 px-0">
                                    <small class="text-muted d-block">@Html.DisplayNameFor(model => model.MontoIngreso)</small>
                                    <span class="fs-5 text-success fw-bold">₡ @Html.DisplayFor(model => model.MontoIngreso)</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item py-3 px-0">
                                    <small class="text-muted d-block">@Html.DisplayNameFor(model => model.CierreCaja)</small>
                                    <span class="fs-5">@Html.DisplayFor(model => model.CierreCaja.Fecha)</span>
                                </div>
                                <div class="list-group-item py-3 px-0">
                                    <small class="text-muted d-block">@Html.DisplayNameFor(model => model.TipoIngreso)</small>
                                    <span class="badge bg-info fs-6">@Html.DisplayFor(model => model.TipoIngreso.NombreIngreso)</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-3 mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 flex-grow-1" onclick="showLoader()">
                            <i class="bi bi-arrow-left-circle me-2"></i>Regresar
                        </a>
                       @*  <a asp-action="Edit" asp-route-IdIngreso="@Model.IdIngreso" class="btn btn-primary btn-lg px-4 flex-grow-1" onclick="showLoader()">
                            <i class="bi bi-pencil-square me-2"></i>Editar
                        </a> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}