@model IEnumerable<TotalHRInsight.DAL.Salario>
@{
    ViewData["Title"] = "Lista de Salarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="max-height:150px; max-width:1500px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">Lista de Salarios</h3>
        @* <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary px-3 py-2 d-flex align-items-center" onclick="showLoader()">
                <i class="bi bi-plus-circle-fill me-2"></i>Nuevo Salario
            </a>
        </div> *@
    </div>

    <div class="row g-4" style="max-height: 80vh; overflow-y: auto;">
        @foreach (var item in Model)
        {
            <div class="col-xl-4 col-lg-6">
                <div class="card h-100 border-0 shadow-sm hover-shadow-md transition-all">
                    <div class="card-header bg-secondary bg-gradient text-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-person-badge me-2"></i>
                                Salario #@(item?.IdSalario ?? 0)
                            </h5>
                        </div>
                    </div>

                    <div class="card-body" style="max-height: 350px; overflow-y: auto;">
                        <div class="list-group list-group-flush">
                            <div class="list-group-item border-0 px-0">
                                <small class="text-muted d-block mb-1">Información del Empleado</small>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-circle text-primary me-2"></i>
                                    <span>@(item?.UsuarioAsignacion?.Nombre ?? "No asignado") @(item?.UsuarioAsignacion?.PrimerApellido ?? "") @(item?.UsuarioAsignacion?.SegundoApellido ?? "")</span>
                                </div>
                            </div>

                            <div class="list-group-item border-0 px-0">
                                <small class="text-muted d-block mb-1">Salario Bruto</small>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-cash text-primary me-2"></i>
                                    <span class="fs-5">₡ @(item.SalarioBruto.ToString("N2") ?? "0.00")</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light border-0">
                        <div class="d-flex justify-content-between gap-2">
                            @* <a asp-action="Edit" asp-route-id="@(item?.IdSalario ?? 0)"
                               class="btn btn-outline-warning flex-grow-1 d-flex align-items-center justify-content-center"
                               onclick="showLoader()">
                                <i class="bi bi-pencil-square me-2"></i>Editar
                            </a> *@
                            <a asp-action="Details" asp-route-id="@(item?.IdSalario ?? 0)"
                               class="btn btn-outline-primary flex-grow-1 d-flex align-items-center justify-content-center"
                               onclick="showLoader()">
                                <i class="bi bi-info-circle me-2"></i>Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@(item?.IdSalario ?? 0)"
                               class="btn btn-outline-danger flex-grow-1 d-flex align-items-center justify-content-center"
                               onclick="showLoader()">
                                <i class="bi bi-trash me-2"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>

    <style>
        .hover-shadow-md {
            transition: box-shadow 0.3s ease;
        }

            .hover-shadow-md:hover {
                box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
            }

        .transition-all {
            transition: all 0.3s ease;
        }

        /* Estilos del scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #555;
            }

        /* Firefox */
        * {
            scrollbar-width: thin;
            scrollbar-color: #888 #f1f1f1;
        }
    </style>
}