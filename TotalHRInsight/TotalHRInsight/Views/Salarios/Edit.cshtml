@model TotalHRInsight.DAL.Salario
@{
    ViewData["Title"] = "Editar Salario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-secondary text-white py-3">
                    <h4 class="mb-0 text-center">
                        <i class="bi bi-pencil-square me-2"></i>
                        Editar Salario
                    </h4>
                </div>
                <div class="card-body bg-light">
                    <form asp-action="Edit" class="needs-validation">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="IdSalario" />
                        
                        <div class="row">
                            <!-- Columna Izquierda -->
                            <div class="col-md-6 pe-md-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="SalarioBruto" class="form-control" type="number" step="0.01" />
                                    <label asp-for="SalarioBruto">Salario Bruto (₡)</label>
                                    <span asp-validation-for="SalarioBruto" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="SalarioExtra" class="form-control" type="number" step="0.01" />
                                    <label asp-for="SalarioExtra">Salario Extra (₡)</label>
                                    <span asp-validation-for="SalarioExtra" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <select asp-for="UsuarioCreacionId" class="form-select" asp-items="ViewBag.UsuarioCreacionId">
                                    </select>
                                    <label asp-for="UsuarioCreacionId">Usuario que registra</label>
                                    <span asp-validation-for="UsuarioCreacionId" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Columna Derecha -->
                            <div class="col-md-6 ps-md-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="SalarioNeto" class="form-control" type="number" step="0.01" />
                                    <label asp-for="SalarioNeto">Salario Neto (₡)</label>
                                    <span asp-validation-for="SalarioNeto" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <select asp-for="UsuarioAsignacionId" class="form-select" asp-items="ViewBag.UsuarioAsignacionId">
                                    </select>
                                    <label>Empleado</label>
                                    <span asp-validation-for="UsuarioAsignacionId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-3 d-md-flex justify-content-md-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle me-2"></i>Regresar
                            </a>
                            <button type="submit" class="btn btn-primary px-4 py-2 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-save me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}