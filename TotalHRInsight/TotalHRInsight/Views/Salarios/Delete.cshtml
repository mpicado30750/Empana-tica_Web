@model TotalHRInsight.DAL.Salario

@{
    ViewData["Title"] = "Eliminar Salario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0 text-center">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Eliminar Salario
                    </h4>
                </div>
                <div class="card-body bg-light">
                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-exclamation-circle-fill me-2"></i>
                        ¿Está seguro que desea eliminar este registro? Esta acción no se puede deshacer.
                    </div>

                    <div class="row">
                        <!-- Columna Izquierda -->
                        <div class="col-md-6 pe-md-4">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item border-0 px-0">
                                    <small class="text-muted d-block mb-1">Información del Empleado</small>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-badge text-danger me-2 fs-4"></i>
                                        <div>
                                            <h6 class="mb-1">@(Model?.UsuarioAsignacion?.Nombre ?? "No asignado")</h6>
                                            <p class="mb-0 text-muted">
                                                @(Model?.UsuarioAsignacion?.PrimerApellido ?? "") 
                                                @(Model?.UsuarioAsignacion?.SegundoApellido ?? "")
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="list-group-item border-0 px-0">
                                    <small class="text-muted d-block mb-1">Salario Bruto</small>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-cash-stack text-danger me-2 fs-4"></i>
                                        <h5 class="mb-0">₡ @(Model.SalarioBruto.ToString("N2") ?? "0.00")</h5>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Columna Derecha -->
                        <div class="col-md-6 ps-md-4">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item border-0 px-0">
                                    <small class="text-muted d-block mb-1">Salario Extra</small>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-plus-circle text-danger me-2 fs-4"></i>
                                        <h5 class="mb-0">₡ @(Model.SalarioExtra.ToString("N2") ?? "0.00")</h5>
                                    </div>
                                </div>

                                <div class="list-group-item border-0 px-0">
                                    <small class="text-muted d-block mb-1">Salario Neto</small>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-wallet2 text-danger me-2 fs-4"></i>
                                        <h5 class="mb-0">₡ @(Model.SalarioNeto.ToString("N2") ?? "0.00")</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="IdSalario" />
                        <div class="d-grid gap-3 d-md-flex justify-content-md-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-arrow-left-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger px-4 py-2 flex-grow-1" onclick="showLoader()">
                                <i class="bi bi-trash3-fill me-2"></i>Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_LoaderModal")

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="~/js/loader.js"></script>
}