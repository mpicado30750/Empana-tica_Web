@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<style>
    :root {
        /* Primary Colors */
        --primary-500: #9CA3AF; /* Lighter Gray for buttons */
        --primary-600: #6B7280; /* Hover/Active state Gray */
        --primary-100: #E5E7EB; /* Background Light Gray */
        /* Neutral Colors */
        --neutral-900: #374151; /* Darker Gray for text */
        --neutral-700: #4B5563; /* Medium Gray for secondary text */
        --neutral-500: #9CA3AF; /* Placeholder text Light Gray */
        --neutral-200: #D1D5DB; /* Border Light Gray */
        --neutral-100: #F3F4F6; /* Background accent - very light */
        --neutral-50: #F9FAFB; /* Card background - off white */
        /* Feedback Colors */
        --error-500: #F87171; /* Light Error Red */
        --error-100: #FEE2E2; /* Error background */
    }

    .login-container {
        padding: 1rem 0;
    }

    .login-card {
        background-color: var(--neutral-50);
        border-radius: 1rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.05);
        padding: 2.5rem;
        transition: all 0.3s ease;
    }

        .login-card:hover {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1), 0 4px 6px rgba(0, 0, 0, 0.05);
        }

    .login-title {
        color: var(--neutral-900);
        font-weight: 600;
        font-size: 2rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    .form-control {
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
        border: 2px solid var(--neutral-200);
        color: var(--neutral-900);
        font-size: 1rem;
        transition: all 0.2s ease;
    }

        .form-control::placeholder {
            color: var(--neutral-500);
        }

        .form-control:hover {
            border-color: var(--neutral-500);
        }

        .form-control:focus {
            border-color: var(--primary-500);
            box-shadow: 0 0 0 4px var(--primary-100);
            outline: none;
        }

    .form-label {
        color: var(--neutral-700);
        font-weight: 500;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
        display: block;
    }

    .btn-inicio {
        background-color: var(--primary-500);
        border: none;
        border-radius: 0.5rem;
        padding: 0.875rem 2rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.2s ease;
        width: 100%;
        max-width: 320px;
        cursor: pointer;
    }

        .btn-inicio:hover {
            background-color: var(--primary-600);
            transform: translateY(-2px);
            color: white;
        }

        .btn-inicio:active {
            transform: translateY(0);
        }

        .btn-inicio:focus {
            box-shadow: 0 0 0 4px var(--primary-100);
            outline: none;
        }

    .text-danger {
        color: var(--error-500);
        font-size: 0.875rem;
        margin-top: 0.375rem;
        display: block;
    }

    .validation-summary-errors {
        background-color: var(--error-100);
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 1.25rem;
        }

    /* Bootstrap responsive improvements */
    .login-card {
        /* Adding some responsiveness with Bootstrap grid system */
        padding: 2rem; /* Set padding for smaller screens */
    }

    .btn-inicio {
        padding: 0.75rem 1.5rem; /* Slightly smaller padding for better mobile view */
        font-size: 0.875rem; /* Adjust font size for better readability on small devices */
    }

   
        font-size: 1.5rem; /* Smaller title size for smaller screens */
    }

    .login-card {
        padding: 1.5rem; /* Reduce padding for very small screens */
    }

    .form-control {
        font-size: 0.9rem; /* Slightly smaller font size for input fields */
    }

    }
</style>

<div class="login-container">
    <div class="justify-content-center row" style="max-width:100%;">
        <div class="col-11 col-md-8 col-lg-5 col-xl-4">
            <div class="login-card">
                <h1 class="login-title">@ViewData["Title"]</h1>
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-group mb-4">
                            <label asp-for="Input.Email" class="form-label">Correo Electrónico</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ejemplo@correo.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-5">
                            <label asp-for="Input.Password" class="form-label">Contraseña</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button id="login-submit" type="submit" class="btn btn-lg btn-inicio">
                                Iniciar sesión
                            </button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
