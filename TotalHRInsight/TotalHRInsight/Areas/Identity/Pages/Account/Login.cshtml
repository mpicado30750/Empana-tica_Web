@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<style>
    :root {
        /* Primary Colors */
        --primary-500: #2563eb; /* Main Primary - Accessible Blue */
        --primary-600: #1d4ed8; /* Hover/Active state */
        --primary-100: #dbeafe; /* Light Primary for backgrounds */
        /* Neutral Colors */
        --neutral-900: #111827; /* Main text color */
        --neutral-700: #374151; /* Secondary text */
        --neutral-500: #6b7280; /* Placeholder text */
        --neutral-200: #e5e7eb; /* Borders */
        --neutral-100: #f3f4f6; /* Background accents */
        --neutral-50: #f9fafb; /* Card background */
        /* Feedback Colors */
        --error-500: #ef4444; /* Error text */
        --error-100: #fee2e2; /* Error background */
    }

    .login-container {
        padding: 2rem 0;
    }

    .login-card {
        background-color: var(--neutral-50);
        border-radius: 1rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        padding: 2.5rem;
        transition: all 0.2s ease;
    }

        .login-card:hover {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

    .login-title {
        color: var(--neutral-900);
        font-weight: 700;
        font-size: 1.875rem;
        margin-bottom: 2rem;
        text-align: center;
        letter-spacing: -0.025em;
    }

    .form-control {
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
        border: 2px solid var(--neutral-200);
        color: var(--neutral-900);
        font-size: 1rem;
        transition: all 0.2s ease;
    }

        .form-control::placeholder {
            color: var(--neutral-500);
        }

        .form-control:hover {
            border-color: var(--neutral-500);
        }

        .form-control:focus {
            border-color: var(--primary-500);
            box-shadow: 0 0 0 4px var(--primary-100);
            outline: none;
        }

    .form-label {
        color: var(--neutral-700);
        font-weight: 500;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
        display: block;
    }

    .btn-inicio {
        background-color: var(--primary-500);
        border: none;
        color: white;
        border-radius: 0.5rem;
        padding: 0.875rem 2rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.2s ease;
        width: 100%;
        max-width: 320px;
        letter-spacing: 0.025em;
    }

        .btn-inicio:hover {
            background-color: var(--primary-600);
            transform: translateY(-1px);
        }

        .btn-inicio:active {
            transform: translateY(0);
        }

        .btn-inicio:focus {
            box-shadow: 0 0 0 4px var(--primary-100);
            outline: none;
        }

    .text-danger {
        color: var(--error-500);
        font-size: 0.875rem;
        margin-top: 0.375rem;
        display: block;
    }

    .validation-summary-errors {
        background-color: var(--error-100);
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 1.25rem;
        }
</style>

<div class="container-fluid login-container">
    <div class="row justify-content-center">
        <div class="col-11 col-md-8 col-lg-5 col-xl-4">
            <div class="login-card">
                <h1 class="login-title">@ViewData["Title"]</h1>
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-group mb-4">
                            <label asp-for="Input.Email" class="form-label">Correo Electrónico</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ejemplo@correo.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-5">
                            <label asp-for="Input.Password" class="form-label">Contraseña</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button id="login-submit" type="submit" class="btn btn-lg btn-inicio">
                                Iniciar sesión
                            </button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}