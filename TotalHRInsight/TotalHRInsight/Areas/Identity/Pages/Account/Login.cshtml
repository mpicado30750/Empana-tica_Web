@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<style>
    .btn-inicio {
        background-color: #B42D29;
        border-color: #B42D29;
        color: #FAFCFD;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mb-4">@ViewData["Title"]</h1>
            <section>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.Email" class="form-label">Correo Electrónico</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">
                            <input class="custom-checkbox" asp-for="Input.RememberMe" />
                            Recordarme
                            <span class="checkmark"></span>
                        </label>
                    </div>
                    <div class="text-center">
                        <button id="login-submit" type="submit" class="btn btn-lg btn-block btn-inicio">Iniciar sesión</button>
                    </div>
                    <div class="mt-4">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como nuevo usuario</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}